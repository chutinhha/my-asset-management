@model IEnumerable<Asset_Management.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            ProductName
        </th>
        <th>
            OfficeID
        </th>
        <th>
            DateBuyed
        </th>
        <th>
            InputBy
        </th>
        <th>
            AcceptBy
        </th>
        <th>
            PriceUnit
        </th>
        <th>
            Status
        </th>
        <th>
            DateExpireMaintance
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfficeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateBuyed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InputBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AcceptBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateExpireMaintance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
